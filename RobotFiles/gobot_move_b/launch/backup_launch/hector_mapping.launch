<?xml version="1.0"?>
<launch>
  <node pkg="hokuyo_node" type="hokuyo_node" name="hokuyo" >
    <param name="frame_id" value="base_laser" />
    <param name="min_ang" value="-1.5707963265" />
    <param name="max_ang" value="1.5707963265" />
  </node>
  <node pkg="wheel" type="MD49.py" name="wheel" />
  <node pkg="tf" type="static_transform_publisher" name="base_link" args="0 0 0 0 0 0 /base_link /base_laser 100 "/>
  <node pkg="gobot_move" type="odom_twoFrame.py" name="odom_node"/>
  <node pkg="gobot_move" type="twist.py" name="control_node"/>

  <node pkg="hector_mapping" type="hector_mapping" name="hector_mapping" output="screen">
    <param name="scan_topic" value="scan" />
    <param name="map_frame" value="/map" />
    <param name="base_frame" value="base_link" />
    <param name="odom_frame" value="odom" />

    <param name="output_timing" value="false"/>
    <param name="advertise_map_service" value="true"/>
    <param name="use_tf_scan_transformation" value="true"/>
    <param name="use_tf_pose_start_estimate" value="false"/>
    <param name="pub_odometry" value="false" />
    <param name="pub_map_odom_transform" value="true"/>
    <param name="pub_map_scanmatch_transform" value="false" />
    <param name="map_with_known_poses" value="false"/>

    <param name="map_pub_period" value="2.0"/>
    <param name="update_factor_free" value="0.4"/>
    <param name="update_factor_occupied" value="0.9" />

    <param name="map_update_distance_thresh" value="0.4"/>
    <param name="map_update_angle_thresh" value="0.9"/>

    <param name="map_resolution" value="0.05"/>
    <param name="map_size" value="2048"/>
    <param name="map_start_x" value="0.5"/>
    <param name="map_start_y" value="0.5"/>
    <param name="map_multi_res_levels" value="5" />
    
    <param name="laser_min_dist" value="0.5" />
    <param name="laser_max_dist" value="6.0" />
    <param name="laser_z_min_value" value = "-1.0" />
    <param name="laser_z_max_value" value = "1.0" />
    <param name="scan_subscriber_queue_size" value="50"/>
    <!--param name="tf_map_scanmatch_transform_frame_name" value="/scanodom"/-->
  </node> 
<!--
  <include file="$(find gobot_move)/launch/my_move_base.launch"/>
-->
</launch>

